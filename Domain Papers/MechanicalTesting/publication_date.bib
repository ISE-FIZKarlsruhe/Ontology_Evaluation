}



@Article{app14093874,
AUTHOR = {Ejaz, Nazia and Khan, Saad Jawaid and Azim, Fahad and Asif, Muhammad and Teuțan, Emil and Pleșa, Alin and Păcurar, Răzvan and Stan, Sergiu-Dan},
TITLE = {Automatic Gait Classification Model Empowered by Machine Learning for People with and without Osteoporosis Using Smart Walker},
JOURNAL = {Applied Sciences},
