}



@Article{app14114450,
AUTHOR = {Tang, Lingdi and Wang, Zanya and Zhang, Chenjun and Wang, Wei and Yuan, Shouqi},
TITLE = {Influence of Runner Downstream Structure on the Flow Field in the Draft Tube of a Small-Sized Water Turbine},
JOURNAL = {Applied Sciences},
